@model RSVPViewModel
@{
    ViewData["Title"] = "Welcome";
}

<div class="main-container text-center">

  <div class="text-center">
      <div  align-centre=""><h1 id="greetings" >BECOME A WORLD CHANGER TODAY! </h1> </div>
  </div>
  <div class="slideshow-container">

    <!-- slider images with number and caption text -->
    <div class="mySlides fade">
      <div class="numbertext">1 / 6</div>
      <img class="horizontal sliderPixPort" src="../icons/inspint/pic5.jpg">
      @* <div class="text">Caption One</div> *@
    </div>

    <div class="mySlides fade">
      <div class="numbertext">2 / 6</div>
      <img src="../icons/inspint/pic2.jpg" class="sliderPixPort">
      @* <div class="text">Caption Two</div> *@
    </div>

    <div class="mySlides fade">
      <div class="numbertext">3 / 6</div>
      <img class="horizontal sliderPixLands" src="../icons/inspint/pic3.jpg">
      @* <div class="text">Caption Three</div> *@
    </div>

    <div class="mySlides fade">
      <div class="numbertext">4 / 6</div>
      <img class="horizontal sliderPixPort" src="../icons/inspint/jjjj.jpg">
      @* <div class="text">Caption Three</div> *@
    </div>

  <div class="mySlides fade">
      <div class="numbertext">5 / 6</div>
      <img src="../icons/inspint/pic1.jpg" class="sliderPixPort">
      @* <div class="text">Caption Text</div> *@
    </div>

    <div class="mySlides fade">
      <div class="numbertext">6 / 6</div>
      <img class="horizontal sliderPixLands" src="../icons/inspint/pic6.jpg">
      @* <div class="text">Caption Three</div> *@
    </div>

    @* <!-- Next and previous buttons -->
    <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
    <a class="next" onclick="plusSlides(1)">&#10095;</a> *@
  </div>
  <br>

  <div card-container="">
      <div class="card"><img src="../icons/training-icon-min-2.png" width="100" height="100">
      <p>
      Acquire Professional Certifications that will boost your portfolio and marketability. 
      Get yourself ready for that big role you have always admired. Be one of the most sought after professionals.
      Join us today.
      </p> 
      <a class="button" asp-area="" asp-controller="Home" asp-action="ProfessionalCourses">More</a>
      </div>
      <div class="card"><img src="../icons/toolbox-icon-5.png" width="100" height="100">
      <p>
      Become future proof. Learn a skill today that will enable you adapt easily to economic changes,
      increase your productivity, and become self-employed. Join us today.
      </p> 
      <a class="button" asp-area="" asp-controller="Home" asp-action="AcquireSkill">More</a>
      </div>
      <div class="card"><img src="../icons/resume-icon.png" width="100" height="100">
      <p>
      Stand out among the crowd. Get your C.V. reviewed by experts. 
      Position yourself to get your dream job. Join us today.
      </p>   
      <a class="button" asp-area="" asp-controller="Home" asp-action="GetProfessionalCV">More</a>
      </div>

  </div>
</div>
@section RSVP 
{
    <partial name="_RSVPPartial"/>
}


@section Scripts {
        <partial name="_ValidationScriptsPartial"/>
        <partial name="_MyScriptsPartial" />
}


